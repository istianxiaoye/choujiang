{
  "name": "lucky-draw-cases",
  "version": "0.0.0",
  "private": true,
  "main": "dist-electron/background.js",
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check build-only",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit",
    "electron:build": "vite build && electron-builder"
  },
  "build": {
    "productName": "ElectronVite4Vue3",
    "appId": "cc.xiaoyan.electron-vite4-vue3",
    "copyright": "Copyright Â© 2023-present Andy",
    "compression": "maximum",
    "asar": true,
    "extraResources": [
      {
        "from": "public/mp3s", 
        "to": "/mp3s"
      }
    ],  
    "asarUnpack": [
      "public/*",
      "node_modules/*"
    ],
    "directories": {
      "output": "release/${version}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": true,
      "deleteAppDataOnUninstall": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "ElectronVite4Vue3"
    },
    "win": {
      "icon": "./resource/shortcut.ico",
      "artifactName": "${productName}-v${version}-${platform}-${arch}-setup.${ext}",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "ia32"
          ]
        }
      ]
    },
    "mac": {
      "icon": "./resource/shortcut.icns",
      "artifactName": "${productName}-v${version}-${platform}-${arch}-setup.${ext}"
    },
    "linux": {
      "icon": "./resource",
      "artifactName": "${productName}-v${version}-${platform}-${arch}-setup.${ext}"
    }
  },
  "electronDownload": {
    "mirror": "<https://npm.taobao.org/mirrors/electron/>"
  },
  "devDependencies": {
    "@types/node": "^18.11.12",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vue/tsconfig": "^0.1.3",
    "autofit.js": "^3.0.7",
    "electron": "^24.4.0",
    "electron-builder": "^24.9.1",
    "electron-devtools-installer": "^3.2.0",
    "element-plus": "^2.2.28",
    "less": "^4.1.3",
    "npm-run-all": "^4.1.5",
    "typescript": "~4.7.4",
    "vite": "^4.0.0",
    "vite-plugin-electron": "^0.15.5",
    "vue": "^3.2.45",
    "vue-router": "^4.1.6",
    "vue-tsc": "^1.0.12"
  }
}
